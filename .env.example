# Database connection string
DATABASE_URI=mongodb://127.0.0.1/your-database-name

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3026

# Site name used throughout the application
SITE_NAME=Your Site Name

# Site email pattern for user registration (e.g., *@yourdomain.com)
SITE_EMAIL_PATTERN=*@yourdomain.com

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Logging configuration
LOG_TO_FILE=true
LOG_FILE=logs/syncReport.log
LOG_LEVEL=3

# FedSync output directory (commented out to use package defaults)
OUTPUT_DIR=data/fedsync

# Federator API Configuration
FEDERATOR_BEARER_TOKEN=your-federator-api-token
FEDERATOR_API_URL=https://your-federator-api-url.com/api/federator
OPENAPI_SPEC_URL=https://your-federator-api-url.com/api/federator/docs

# AI API Keys (Optional - for AI-powered content generation)
CLAUDE_API_KEY=your-claude-api-key
CHATGPT_API_KEY=your-chatgpt-api-key

# Better Auth Configuration
# NEXT_PUBLIC_SERVER_URL is used for both Better Auth and as the app URL
BETTER_AUTH_SECRET=your-super-secret-key-change-in-production

# OAuth Providers
# Google OAuth (Required for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (Optional - logs to console if not set)
# EMAIL_FROM=noreply@yourdomain.com
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
